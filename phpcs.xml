<?xml version="1.0"?>
<ruleset name="WPFeatureLoop Ruleset">
  <description>PHP_CodeSniffer configuration for WPFeatureLoop</description>

  <rule ref="PSR12"/>

  <file>src</file>
  <file>tests</file>

  <exclude-pattern>vendor/*</exclude-pattern>
  <exclude-pattern>tests/fixtures/*</exclude-pattern>

  <arg name="report-width" value="120"/>
</ruleset>
